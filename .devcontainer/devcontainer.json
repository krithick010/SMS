{
  "name": "SMS Classifier",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "sms_classifier.py"
      ]
    },
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "updateContentCommand": "pip3 install --user streamlit nltk scikit-learn pandas numpy && python3 -c \"import nltk; nltk.download('stopwords'); nltk.download('punkt')\" && echo 'âœ… Packages installed and Requirements met'",
  "postAttachCommand": {
    "server": "streamlit run sms_classifier.py --server.enableCORS false --server.enableXsrfProtection false"
  },
  "portsAttributes": {
    "8501": {
      "label": "SMS Classifier App",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [
    8501
  ]
}
